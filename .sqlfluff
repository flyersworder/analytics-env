# .sqlfluff

[sqlfluff]
dialect = ansi
templater = jinja
rules = L003,L010,L014,L016,L019,L036,L040,L042,L050
max_line_length = 80
tab_space_size = 2

[sqlfluff:rules]
tab_space_size = 2

[sqlfluff:rules:L003]  # Indentation
indent_unit = space

[sqlfluff:rules:L010]  # Capitalization of keywords
capitalisation_policy = upper

[sqlfluff:rules:L014]  # Capitalization of unquoted identifiers
capitalisation_policy = consistent  # Use 'consistent' or 'lower' as desired

[sqlfluff:rules:L016]  # Line breaks before/after keywords
line_break_before = from, where, group by, order by, having, limit, offset, and, or

[sqlfluff:rules:L019]  # Leading/Trailing commas
comma_style = trailing

[sqlfluff:rules:L036]  # Select clause alignment
select_clause_style = newline

[sqlfluff:rules:L040]  # Capitalization of datatypes
capitalisation_policy = upper

[sqlfluff:rules:L042]  # Alias usage in from clauses
aliasing = explicit

[sqlfluff:rules:L050]  # Newlines around binary operators
operator_new_lines = before
